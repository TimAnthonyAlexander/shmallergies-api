#!/bin/bash

# Shmallergies API - Pre-commit hook
# This script runs code quality checks before allowing a commit

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

EXIT_CODE=0

echo -e "${BLUE}üîç Running pre-commit checks for Shmallergies API...${NC}"
echo "=================================="

# Function to run a command
run_check() {
    local check_name="$1"
    shift
    local command=("$@")

    echo -e "\n${BLUE}Running $check_name...${NC}"

    if "${command[@]}"; then
        echo -e "${GREEN}‚úÖ $check_name passed${NC}"
        return 0
    else
        echo -e "${RED}‚ùå $check_name failed${NC}"
        return 1
    fi
}

# Run PHPStan static analysis
if ! run_check "Static Analysis" composer phpstan; then
    EXIT_CODE=1
fi

# Run tests
if ! run_check "Unit Tests" composer test; then
    EXIT_CODE=1
fi

# Summary
echo -e "\n=================================="
if [ $EXIT_CODE -eq 0 ]; then
    echo -e "${GREEN}üéâ All pre-commit checks passed! Ready to commit.${NC}"
else
    echo -e "${RED}üí• Some pre-commit checks failed!${NC}"
    echo -e "${YELLOW}Please fix the issues above before committing.${NC}"
    echo -e "${YELLOW}You can run the following to fix most issues automatically:${NC}"
    echo -e "${YELLOW}  composer quality-fix${NC}"
fi

exit $EXIT_CODE
